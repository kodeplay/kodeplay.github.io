lookup['ginger-container'] = '<g id = "ginger-container">'+
'<rect x = "20" y = "20" width = "40" height = "40"'+
'style = "fill:brown;stroke:grey"/>'+
'<text x = "20" y = "75">ginger</text>'+
'</g>'    ;
var mystack = new Array();

function addselectedtostack(id)
{
  mystack.push(id)  ;
} 


function updateworkarea(){
  $("#workarea-2").append(lookup[mystack.pop()]); 
  $("#workarea-2-container").html($("#workarea-2-container").html());
}
</script>
